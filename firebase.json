{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "**/sw.js",
        "headers" : [
          {
            "key" : "Service-Worker-Allowed",
            "value" : "/"
          },
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      },
      {
        "source":"**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "frame-ancestors",
            "value": "self"
          },
          {
            "key": "require-trusted-types-for",
            "value": "script"
          }
        ]
      }
    ]
  }
}